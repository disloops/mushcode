# Starlink Bot Configuration
# Copy this file to starlink.env and fill in the values

# MUSH Connection Settings
MUSH_HOST=[your.mush.server.com]
MUSH_PORT=4201
MUSH_TIMEOUT=0.5
BOT_NAME=[your_bot_name]
BOT_PASSWORD=[your_bot_password]

# API Settings
API_AUTH_KEY=[your_api_auth_key]
API_URL=http://localhost:5000
API_TIMEOUT=30
MAX_INPUT_LENGTH=10000
OPENAI_MODEL=gpt-4o

# Bot Behavior Settings
MESSAGE_DELAY=0.5
TARGET_LOCATIONS=[#33255,#12345,#67890]
MASTER_PLAYER_DBREF=[#123]
LOG_BOOK_DBREF=[#5555]

# Rate Limiting
RATE_LIMIT_WINDOW=60
MAX_RESPONSES_PER_WINDOW=25

# Logging
LOG_LEVEL=INFO
LOG_FILE=starlink.log

# Retry Settings
MAX_RETRIES=3
RETRY_DELAY=5
