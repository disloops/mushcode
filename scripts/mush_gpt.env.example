# MUSH GPT API Server Configuration
# Copy this file to mush_gpt.env and configure your settings

# OpenAI API Settings
OPENAI_API_KEY=[your_openai_api_key_here]
OPENAI_MODEL=gpt-4o

# Flask Server Settings
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_DEBUG=False

# Security Settings
MAX_INPUT_LENGTH=5000
AUTH_KEY=[your_auth_key_here]

# Logging Settings
LOG_LEVEL=INFO
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=3

# Character Settings
VALID_CHARACTERS=oracle,daemon,ptolemy,today,starlink
